{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "lib": ["DOM", "ES2017"],
    "jsx": "react",

    /* Modules */
    "module": "es6",
    "moduleResolution": "node",

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
